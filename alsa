# do NOT run if you don't have the alsa.conf.other file
# we have alsa.conf and alsa.conf.other. We want to interchange them.
cp /usr/share/alsa/alsa.conf /usr/share/alsa/alsa.conf.tmp
mv /usr/share/alsa/alsa.conf.other /usr/share/alsa/alsa.conf
mv /usr/share/alsa/alsa.conf.tmp /usr/share/alsa/alsa.conf.other

cat /usr/share/alsa/alsa.conf | grep "pcm.card "
