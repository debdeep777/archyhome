# wallify the wallpaper

if [ $1 ]
then
	rm /root/.config/awesome/themes/multicolor/min.jpg.bak

	ln -s -T $(pwd)/$1 /root/.config/awesome/themes/multicolor/min.jpg.bak 

fi
cd /root/.config/awesome/themes/multicolor/
cp min.jpg tmp
mv min.jpg.bak min.jpg
mv tmp min.jpg.bak

echo "Symlink created and old pic backed up. Press Mod4+Ctrl+W to change wallpaper"
