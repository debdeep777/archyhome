# Turn any file into shell script with git support
# To be ran from anywhere 
echo 'Making the file executable...'
chmod +x $1
echo 'Moving it to .myscr...'
mv $1 ~/.myscr/
echo 'Adding to the git list..'
# Need to run ~'s git
cd ~
echo 'Changed directory'
ls
onlyfile=$(basename $1)
git add ~/.myscr/$onlyfile
echo 'Done.'
